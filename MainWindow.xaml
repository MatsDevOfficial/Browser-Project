<Window x:Class="AIBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="AI Browser" Height="450" Width="800">
    <Grid>
        <!-- URL-balk -->
        <TextBox Name="UrlBox" VerticalAlignment="Top" Margin="10" Height="30" />

        <!-- Navigatieknop -->
        <Button Content="Ga" VerticalAlignment="Top" Height="30" Width="50"
                HorizontalAlignment="Right" Margin="0,10,10,0" Click="OnNavigateClick" />

        <!-- WebView2 browser -->
        <wv2:WebView2 Name="WebView" Margin="10,50,10,10" />

        <!-- AI Assistent knop -->
        <Button Content="AI Assistent (uitgeschakeld)" VerticalAlignment="Bottom" Height="40"
                HorizontalAlignment="Right" Margin="10" Width="180"
                Click="OnAIButtonClick" IsEnabled="True" />
    </Grid>
</Window>
